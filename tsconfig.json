{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2015",
      "ES2016.Array.Include",
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true, // FIXME: workaround for immutable.js
    "keyofStringsOnly": true, // FIXME: workaround for immutable.js
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "node_modules/@types/react-redux/node_modules/@types/react/index.d.ts",
    "**/__tests__/**"
  ],
}
